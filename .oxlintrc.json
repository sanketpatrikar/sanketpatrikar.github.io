{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "error",
		"suspicious": "error",
		"style": "off",
		"perf": "warn"
	},
	"rules": {
		"react-in-jsx-scope": "off"
	},
	"plugins": ["react", "jsx-a11y", "react-perf", "import", "promise"],
	"env": {
		"browser": true
	},
	"ignorePatterns": ["node_modules", "dist", "build", ".tanstack", "routeTree.gen.ts"]
}
